<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="@dimen/card_radius"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/info_card_title_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:text="@string/placeholder_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/textWhitePrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_card_orgnr_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_card_title_lay"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/info_card_orgnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:text="Org. nr: 24362245323"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_card_adr_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_card_orgnr_lay"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/info_card_adr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:text="Gatenavn 19"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_card_zip_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_card_adr_lay">
            <TextView
                android:id="@+id/info_card_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:text="4512"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_card_zipname_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_card_zip_lay">
            <TextView
                android:id="@+id/info_card_zipname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:text="Stedsnavn"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />
        </LinearLayout>


            <ImageView
                android:id="@+id/info_card_grade"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginEnd="0dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="20dp"
                android:src="@drawable/smilefjes" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>